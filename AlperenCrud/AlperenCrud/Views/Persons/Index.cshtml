@model IEnumerable<AlperenCrud.Models.Persons>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.personName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personIdentityId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.personName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.personSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.personAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.personGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.personIdentityId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.personId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.personId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.personId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
